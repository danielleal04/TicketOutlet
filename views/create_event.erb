<div class="container">
<h2> Create Event </h2>
<br>
<form action="/create_event" method="POST">

  <div class="form-row">
  <div class="form-group col-md-6">
      <label>Name </label>
      <input type="text" name ="event_name" class="form-control" required>
    </div>
    </div>

    <br>

    <div class="form-row">
    <div class="form-group col-md-8">
      <label>Description </label>
      <input name ="event_description" style="height:100px; width:600px;" type="message" class="form-control" id="message" size="20" required>

    </div>
    </div>

    <br>

    <div class="form-row">
    <div class="form-group col-md-6">
      <label>Date </label> <br>
      <input type="date" name="event_date" value="YYYY-MM-DD" min="2018-01-01" max="2019-12-31" required>
    </div>
    </div>

    <br>

    <div class="form-row">
    <div class="form-group col-md-6">
      <label>Price </label>
      <input type="number" name ="event_price" placeholder="0.00" step="0.001" class="form-control" required>
    </div>
    </div>

    <br>

    <div class="form-row">
    <div class="form-group col-md-6">
      <label>Available Tickets </label>
      <input type="number" name ="avai_tickets" class="form-control" required>
    </div>
    </div>

    <br>

    <div class="form-row">
    <div class="form-group col-md-6">
      <label>Image File Name </label>
      <input type="text" name="image_name" class="form-control" required>
    </div>
    </div>

    <br>

  <button type="submit" name="" class="btn btn-primary">Submit</button>
</form>
<br>
<br>
</div>
